<div id="home-content-wrapper">

<div id="home-content-header-thinest">
<p class="intro-message"><strong>Acceso</strong></p>
</div>

<div id="home-content">
<%= form_for @user, :as => :user, :url => sign_in_path(@user) do |f| %>
  <p>
    <%= f.label 'Nombre de usuario o e-mail:' %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label 'Contraseña:' %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Entrar' %>&nbsp;&nbsp;&nbsp;
  </p>
<% end %>
</div>
<div id="product_links">
  <%if current_user && current_user.admin?%>
  Opciones:
  <%= link_to 'Usuarios', users_path %> /
  <%= link_to 'Productos', products_path %> /
  <%= link_to 'Categorías', categories_path %> /
  <%= link_to 'Cambiar mi password', account_settings_path %>
  <%end%>
</div>
<div id="product_links"><%= link_to '< Ir a la tienda', products_path %></div>
</div>